@model MVC03.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <div class="mt-3 mb-3">
        <h2> Chi tiết sản phẩm </h2>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="image-container border rounded p-2">
                <img src="@Model.ImageURL" class="img-fluid" alt="@Model.ProductName">
            </div>
        </div>
        <div class="col-md-6">
            <h2>@Model.ProductName</h2>
            <h4 class="text-primary fw-bold">@Model.ProductPrice.ToString("N0") VND</h4>
            <p class="text-muted">@Model.Description</p>
            <br>
            <div class="mt-3">
                <button class="btn btn-success btn-lg">Add to Cart</button>
                <a href="@Url.Action("ProductList", "Product")" class="btn btn-secondary btn-lg">Back to List</a>
            </div>
        </div>
    </div>
</div>

<style>
    .image-container {
        height: 350px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        background-color: #ffff;
        border: 1px solid #ddd;
        border-radius: 8px;
    }

    .image-container img {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
    }
</style>