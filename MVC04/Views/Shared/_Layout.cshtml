<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC04</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC04.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

</head>
<body>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

    @* <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div> *@
    
@if (ViewData["Title"] != "Login")
{
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow p-3">
            <div class="container-fluid">
                @* <!-- Logo --> *@
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <i class="bi bi-briefcase-fill me-2"></i>
                    <span>MVC04</span>
                </a>

                @* <!-- Nút Toggle trên màn hình nhỏ --> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @* <!-- Menu --> *@
                <div class="collapse navbar-collapse justify-content-end" id="navbarResponsive">
                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("Username")))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/">
                                    <i class="bi bi-house-door me-1"></i>Trang chủ
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Product" asp-action="NewProduct">
                                    <i class="bi bi-plus-circle me-1"></i>Add Product
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Product" asp-action="ProductMgr">
                                    <i class="bi bi-list-check me-1"></i>Danh sách - admin
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Product" asp-action="ProductList">
                                    <i class="bi bi-box-seam me-1"></i>Danh sách - user
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-primary px-3 rounded-pill" href="/Account/Logout">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Đăng xuất
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/">
                                    <i class="bi bi-house-door me-1"></i>Trang chủ
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Product" asp-action="ProductList">
                                    <i class="bi bi-box-seam me-1"></i>Danh sách
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-primary px-3 rounded-pill" href="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Đăng nhập
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
} else {
    <header class="">
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow p-3">
            <div class="container-fluid">
                @* <!-- Logo --> *@
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <i class="bi bi-briefcase-fill me-2"></i>
                    <span>MVC04</span>
                </a>

                @* <!-- Nút Toggle trên màn hình nhỏ --> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>                
            </div>
        </nav>
    </header>
}

@if (ViewData["Title"] != "Login")
{
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
} else {
    <div class="background">
        <div class="container pb-3 pt-3">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
}

    <footer class="border-top text-muted m-0">
        <div class="container p-2 mt-2">
            &copy; 2025 - MVC04 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
